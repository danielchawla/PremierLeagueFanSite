<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Nationality</th>
      <th>Position</th>
      <th>Yearsofexperience</th>
      <th>Salary</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <% if player.team_id == params{1}["team_id"].to_i %>
      <tr>
        <td><%= player.firstname %></td>
        <td><%= player.lastname %></td>
        <td><%= player.nationality %></td>
        <td><%= player.position %></td>
        <td><%= player.yearsofexperience %></td>
        <td><%= player.salary %></td>
        <td><%= player.team.fullname %></td>
        <td><%= link_to 'Show', player_path(player) %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td> 
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %> 
    <% end %>
  </tbody>
</table>

<br>

