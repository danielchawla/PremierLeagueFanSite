
<p>
  <strong>First Name:</strong>
  <%= @player.firstname %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @player.lastname %>
</p>

<p>
  <strong>Nationality:</strong>
  <%= @player.nationality %>
</p>

<p>
  <strong>Position:</strong>
  <%= @player.position %>
</p>

<p>
  <strong>Years Experience:</strong>
  <%= @player.yearsofexperience %>
</p>

<p>
  <strong>Salary:</strong>
  <span class="input-group-addon">$</span>
  <%= number_with_delimiter(@player.salary, :delimiter => ',') %>
</p>

<strong>Team:</strong>
  <%= @player.team.fullname %>
</p>

<%= link_to 'Edit', edit_player_path(@player), class: 'btn btn-primary' %> 
<%= link_to 'Back', team_players_path(@player.team), class: 'btn btn-primary' %>