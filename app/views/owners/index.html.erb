<p id="notice"><%= notice %></p>

<h1>Owners</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @owners.each do |owner| %>
      <% if owner.team_id == params{1}["team_id"].to_i %>
        <tr>
          <td><%= owner.firstname %></td>
          <td><%= owner.lastname %></td>
          <td><%= owner.team.fullname %></td>
          <td><%= link_to 'Show', owner %></td>
          <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
          <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>      
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_team_owner_path, class: 'btn btn-primary' %>
