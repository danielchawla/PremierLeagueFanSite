<h3>Results</h3>
<table class="table table-dark">
  <thead>
    <tr>
      <% @headers.each do |key| %>
        <th scope="col">
          <%= key %>
        </th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @results.each do |result| %>
      <tr>
        <% @headers.each do |key| %>
          <td>
            <%= result[key] %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>  
</table>

