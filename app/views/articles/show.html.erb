
<h1>
  <%= @article.title %>
</h1>

<p>
  <strong>Text:</strong>
  <%= @article.articletext %>
</p>

<p>
  <strong>Time Posted:</strong>
  <%= @article.timeposted %>
</p>

<p>
  <strong>Team:</strong>
  <%= @article.team.fullname %>
</p>

<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.app_user.email %></strong>
    <br>
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render partial: 'comments/form' %>
<br>  
<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary' %> 
<%= link_to 'Back', team_articles_path(@article.team), class: 'btn btn-primary' %>