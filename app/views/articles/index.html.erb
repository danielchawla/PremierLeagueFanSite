<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Time Posted</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <% if article.team_id == params{1}["team_id"].to_i %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.articletext.truncate(20) %></td>
          <td><%= article.timeposted %></td>
          <td><%= article.team.fullname %></td>
          <td><%= link_to 'Show', article %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_team_article_path, class: 'btn btn-primary' %> 
<%= link_to 'Back to Teams', teams_path, class: 'btn btn-primary' %>
