<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Time Posted</th>
      <th>Team</th>
      <th>Links</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <% if article.team_id == params{1}["team_id"].to_i %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.articletext.truncate(20) %></td>
          <td><%= article.timeposted %></td>
          <td><%= article.team.fullname %></td>
          <td><%= link_to ("<i class='far fa-eye'></i>").html_safe, article %></td> 
          <td><%= link_to ("<i class='fas fa-edit fa-sm'></i>").html_safe, edit_article_path(article) %></td>
          <td><%= link_to ("<i class='fa fa-trash fa-sm'></i>").html_safe, article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_team_article_path, class: 'btn btn-primary' %> 
<%= link_to 'Back to Teams', teams_path, class: 'btn btn-primary' %>
