<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Awayteamscore</th>
      <th>Hometeamscore</th>
      <th>Gamedate</th>
      <th>Hometeam</th>
      <th>Awayteam</th>
      <th>Winningteam</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.awayteamscore %></td>
        <td><%= game.hometeamscore %></td>
        <td><%= game.gamedate %></td>
        <td><%= game.hometeam %></td>
        <td><%= game.awayteam %></td>
        <td><%= game.winningteam %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

